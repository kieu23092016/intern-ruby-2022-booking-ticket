<div class="block-wrapper">
  <div class = "container">
    <div class = "row">
      <div class="content-wrapper">
        <div class="tab-movies tab-crm">
          <div class="tab-movies-line">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#tab_info" data-toggle="tab"><%= t(".member_info") %></a></li>
            </ul>
            <div class="tab-content">
              <div id="tab_info" class="tab-pane active">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }, class: "member-form") do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="row">
                    <div class="col-md-5 col-sm-7 col-xs-7">
                      <%= f.label :user_name %><br/>
                      <%= f.text_field :user_name, autofocus: true, class: "login pass" %>                
                    </div>
                  </div>
                  <div class="row row-info">
                    <div class="col-md-2 col-sm-4 col-xs-4">
                      <%= f.label :sex %><br/>
                      <%= f.text_field :sex, class: "login pass" %>                
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12">
                      <%= f.label :phone %><br/>
                      <%= f.text_field :phone, class: "login pass" %> 
                    </div>
                  </div>
                  <div class="row row-info">
                    <div class="col-md-5">
                      <%= f.label :email %><br/>
                      <%= f.email_field :email, class: "login pass" %> 
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="toggle-button toggle-button-login toggle-member">
                        <input id="changepass" type="checkbox">
                      </div>
                      <div id="box-changepass">
                        <%= f.label :password %> <i><%= t(".blank_input") %></i><br/>
                        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                        <%= f.label :password_confirmation %><br/>
                        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                        <%= f.label :current_password %> <i><%= t(".current_password_input") %></i><br/>
                        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>      
                      </div>
                    </div>
                  </div>
                  <br>
                  <div class="row row-info">
                    <div class="col-md-12"><%= f.submit t(".save"), id: "save", class: "btn primary btn-login-buyticket" %></div>
                  </div> 
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
